<Page x:Class="TraficPolice.MyPenalty"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TraficPolice"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MyPenalty">

    <Grid>
        <DataGrid AutoGenerateColumns="False" Name="Penalty">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="Владелец" Binding="{Binding NameDriver}"/>
                <DataGridTextColumn Width="*" Header="Штраф" Binding="{Binding PenaltyName}"/>
                <DataGridTextColumn Width="*" Header="Статус" Binding="{Binding StateP}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
